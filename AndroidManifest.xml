<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.wordservant"
    android:versionCode="1"
    android:versionName="0.0.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/word_servant_icon_new"
        android:label="@string/title_activity_main" >
        <activity
            android:name="com.app.wordservant.LandingScreen"
            android:label="@string/title_activity_main"
            android:theme="@style/MenuTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.wordservant.Settings"
            android:label="@string/title_activity_settings"
            android:theme="@style/MenuTheme" >
        </activity>
        <activity
            android:name="com.app.wordservant.ScriptureBank"
            android:label="@string/title_activity_scripture_bank"
            android:theme="@style/MenuTheme" >
        </activity>
        <activity
            android:name="com.app.wordservant.InputScriptureManual"
            android:label="@string/title_activity_input_scripture_manual"
            android:parentActivityName="android.support.v4.app.FragmentActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.support.v4.app.FragmentActivity" />
        </activity>
        <activity
            android:name="com.app.wordservant.EditScripture"
            android:label="@string/title_activity_edit_scripture" >
        </activity>
        <activity
            android:name="com.app.wordservant.TodaysMemoryVerses"
            android:label="@string/title_activity_todays_memory_verses" >
        </activity>
        <activity
            android:name="com.app.wordservant.ScriptureReview"
            android:label="@string/title_activity_due_today" >
        </activity>
        <activity
            android:name="com.app.wordservant.SelectScripture"
            android:label="@string/title_activity_select_scripture" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.wordservant.LandingScreen" />
        </activity>

        <service
            android:name="com.app.wordservant.NotificationService"
            android:exported="false" >
        </service>

        <receiver android:name="com.app.wordservant.BootBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.app.wordservant.DisplaySelectedScripture"
            android:label="@string/title_activity_display_selected_scripture" >
        </activity>
        <activity android:name="com.app.wordservant.ManageTagsActivity"></activity>
    </application>

</manifest>