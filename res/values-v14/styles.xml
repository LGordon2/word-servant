<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar"></style>

    <style name="MenuTheme" parent="android:Theme"></style>

    <dimen name="medium_text_size">24sp</dimen>

    <style name="WordServant" parent="@android:style/Theme.Holo">

        <!-- Colors -->
        <item name="android:colorForeground">@color/word_servant_purple</item>
        <item name="android:colorForegroundInverse">@color/word_servant_purple</item>
        <item name="android:colorBackground">@color/word_servant_purple</item>
        <item name="android:colorBackgroundCacheHint">@color/word_servant_purple</item>
        <item name="android:colorPressedHighlight">@color/word_servant_purple</item>
        <item name="android:colorLongPressedHighlight">@color/word_servant_purple</item>
        <item name="android:colorFocusedHighlight">@color/word_servant_purple</item>
        <item name="android:colorMultiSelectHighlight">@color/word_servant_purple</item>
        <item name="android:colorActivatedHighlight">@color/word_servant_purple</item>

        <!-- Items selected -->
        <item name="android:activatedBackgroundIndicator">@drawable/landing_screen_button</item>
        <item name="android:selectableItemBackground">@drawable/landing_screen_button</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/landing_screen_button</item>
        <item name="android:button">@drawable/landing_screen_button</item>
    </style>

</resources>