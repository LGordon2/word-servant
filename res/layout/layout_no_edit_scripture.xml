<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/noEditLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/mainImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bigbird" />

    <TextView
        android:id="@+id/dueTodayTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mainImage"
        android:layout_alignLeft="@+id/dueTodayScriptureReference"
        android:ems="10"
        android:hint="@string/category_text_field_hint"
        android:paddingLeft="5dp"
        android:text="Creation"
        android:textColor="#C894D1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/dueTodayScriptureReference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dueTodayTags"
        android:layout_toRightOf="@+id/mainImage"
        android:ems="10"
        android:gravity="bottom"
        android:hint="@string/scripture_reference_text_field_hint"
        android:paddingLeft="5dp"
        android:text="Genesis 1:1"
        android:textSize="26sp" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mainImage"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:dividerPadding="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:showDividers="end" >

            <ImageButton
                android:id="@+id/takePictureButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_camera" />

            <ImageView
                android:id="@+id/ImageView04"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bigbird" />

            <ImageView
                android:id="@+id/ImageView03"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bigbird" />

            <ImageView
                android:id="@+id/ImageView02"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bigbird" />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bigbird" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bigbird" />

        </LinearLayout>
    </HorizontalScrollView>

