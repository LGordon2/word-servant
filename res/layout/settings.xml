<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <PreferenceCategory 
        android:title="Daily Review Settings"
        android:key="pref_key_storage_settings"
        android:layout_width="match_parent"
    	android:layout_height="match_parent">
        
	    <ListPreference 
	        android:key="pref_key_daily_limit"
	        android:title="New Scriptures Per Week"
	        android:summary="Daily limit on scriptures."
	        android:defaultValue="1"
	        android:entries = "@array/limit_strings"
	        android:entryValues="@array/limit_values"
	        android:layout_width="match_parent"
    		android:layout_height="match_parent"/>
	    	  <CheckBoxPreference 
	      android:key="pref_key_notifications_enabled"
	      android:title="Notifications"
	      android:summaryOn="Notifications enabled."
	      android:summaryOff="Notifications disabled."
	      android:defaultValue="true"
	      android:layout_width="match_parent"
	 		android:layout_height="match_parent"/>
	    

	    
    </PreferenceCategory>
    
     <PreferenceCategory 
     android:title="Review Method Settings"
     android:key="pref_key_notification_settings"
     android:layout_width="match_parent"
 	android:layout_height="match_parent">
     
      <CheckBoxPreference 
	        android:key="pref_key_flashcards"
	        android:title="Flashcards"
	      	android:summaryOn="Flashcards enabled."
	      	android:summaryOff="Flashcards disabled."
	        android:defaultValue="false"
	        android:layout_width="match_parent"
    		android:layout_height="match_parent"/>

	  </PreferenceCategory>
</PreferenceScreen>