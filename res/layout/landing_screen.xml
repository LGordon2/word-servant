<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="50dp" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.46"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/landing_image" />

    <Button
        android:id="@+id/todaysMemoryVerses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/landing_screen_button"
        android:drawableRight="@drawable/content_event"
        android:gravity="right|center_vertical"
        android:paddingTop="10dp"
        android:text="due today"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <Button
        android:id="@+id/scriptureBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/landing_screen_button"
        android:drawableRight="@drawable/content_new"
        android:gravity="right|center_vertical"
        android:paddingTop="10dp"
        android:text="my memory verses"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <Button
        android:id="@+id/quizReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/landing_screen_button"
        android:drawablePadding="18dp"
        android:gravity="right|center_vertical"
        android:paddingTop="5dp"
        android:text="quiz / review"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

</LinearLayout>