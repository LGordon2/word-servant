<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/todaysMemoryVerses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="horizontal"
        android:fadingEdgeLength="100dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/title_activity_todays_memory_verses" />

    <Button
        android:id="@+id/scriptureBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_scripture_bank" />

    <Button
        android:id="@+id/quizReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quiz / Review" />

    <Button
        android:id="@+id/statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Statistics" />

    <Button
        android:id="@+id/scriptureSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scripture Search" />

    <!--
          <ImageView
        android:id="@+id/imageView1"
