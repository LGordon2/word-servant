<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="50dp" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_weight="0.46"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bible2" />

    <Button
        android:id="@+id/todaysMemoryVerses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shapes"
        android:drawableRight="@android:drawable/ic_media_play"
        android:gravity="right|center_vertical"
        android:text="today&apos;s memory verses"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <Button
        android:id="@+id/scriptureBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shapes"
        android:drawableRight="@android:drawable/ic_menu_search"
        android:gravity="right|center_vertical"
        android:text="scripture bank"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <Button
        android:id="@+id/quizReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shapes"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:gravity="right|center_vertical"
        android:text="quiz / review"
        android:textSize="18sp" />

    <Button
        android:id="@+id/statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shapes"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:gravity="right|center_vertical"
        android:text="statistics"
        android:textSize="18sp" />

    <Button
        android:id="@+id/scriptureSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shapes"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:gravity="right|center_vertical"
        android:text="scripture search"
        android:textSize="18sp" />

    <!--
         <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons"
        android:adjustViewBounds="true"
        android:src="@drawable/monogram-background" />
    -->

</LinearLayout>